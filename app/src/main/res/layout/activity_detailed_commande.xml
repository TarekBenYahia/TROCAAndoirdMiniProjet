<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedAnnonce">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_max">

            <ImageView
                android:id="@+id/imageA"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_clients" />

            <TextView
                android:id="@+id/emailC"
                style="@style/SecondaryTextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dateC"
                style="@style/BoldTitleTextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/lieuC"
                style="@style/SecondaryTextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/BtnAccepter"
        android:layout_width="170dp"
        android:layout_height="61dp"
        android:layout_marginTop="350dp"
        android:background="#4CAF50"
        android:text="Accepter"
        android:textColor="@color/white"
        app:layout_anchor="@+id/linearLayout3"
        app:layout_anchorGravity="center" />

    <Button
        android:id="@+id/BtnRefuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:text="Refuser"
        android:textColor="@color/white"
        app:layout_anchor="@+id/linearLayout3"
        app:layout_anchorGravity="center"
        android:layout_marginTop="500dp"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>